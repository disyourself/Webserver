Language: Cpp
BasedOnStyle: GNU
IndentWidth: 4
BreakBeforeBraces: Allman
TabWidth: 4

# 连续赋值时，对齐所有等号
# AlignConsecutiveAssignments: true
 
# 连续声明时，对齐所有声明的变量名
AlignConsecutiveDeclarations: true

# 保留在块开始处的空行
KeepEmptyLinesAtTheStartOfBlocks: true

# 连续空行的最大数量
MaxEmptyLinesToKeep: 2

# 在一个注释中引入换行的penalty
PenaltyBreakComment: 300

# 每行字符的限制，0表示没有限制
ColumnLimit: 0

Standard: Auto